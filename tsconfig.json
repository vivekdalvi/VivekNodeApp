{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        //    "noImplicitAny": true,
        "allowJs": true,
        "lib": [
            "es2015"
        ]
    },
    "includes": [
        "./utils/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}